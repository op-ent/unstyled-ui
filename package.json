{
    "name": "@op-ent/unstyled-ui",
    "author": "Florian LEFEBVRE",
    "version": "0.1.1-4",
    "license": "MIT",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "engines": {
        "node": ">=14"
    },
    "size-limit": [
        {
            "path": "dist/index.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/index.mjs",
            "limit": "10 KB"
        }
    ],
    "pre-commit": [
        "lint",
        "test"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "dev": "tsup --watch \"src/**/*.{js,jsx,ts,tsx}\"",
        "build": "tsup",
        "test": "vitest run --coverage",
        "test:ui": "vitest --ui",
        "lint": "yarn lint:check && yarn prettier:check",
        "lint:check": "eslint . --ext js,jsx,ts,tsx --max-warnings=3 --config .eslintrc.json --no-eslintrc",
        "prettier:check": "prettier -c .",
        "prettier:write": "prettier -w .",
        "prepare": "yarn build",
        "size": "size-limit",
        "storybook": "start-storybook -p 6006",
        "storybook:build": "build-storybook",
        "npm:publish": "np"
    },
    "peerDependencies": {
        "react": ">=16"
    },
    "devDependencies": {
        "@storybook/addon-docs": "^6.5.10",
        "@storybook/addon-essentials": "^6.5.10",
        "@storybook/addon-info": "^5.3.21",
        "@storybook/addon-links": "^6.5.10",
        "@storybook/addons": "^6.5.10",
        "@storybook/builder-vite": "^0.2.2",
        "@storybook/react": "^6.5.10",
        "@storybook/theming": "^6.5.10",
        "@testing-library/jest-dom": "^5.16.4",
        "@testing-library/react": "^13.3.0",
        "@types/react": "^18.0.15",
        "@types/react-dom": "^18.0.6",
        "@types/testing-library__jest-dom": "^5.14.5",
        "@typescript-eslint/eslint-plugin": "^5.31.0",
        "@typescript-eslint/parser": "^5.31.0",
        "@vitejs/plugin-react": "^2.0.0",
        "@vitest/ui": "^0.19.1",
        "c8": "^7.12.0",
        "eslint": "^8.20.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.30.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "jsdom": "^20.0.0",
        "np": "^7.6.2",
        "pre-commit": "^1.2.2",
        "prettier": "^2.7.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "size-limit": "^7.0.8",
        "storybook-dark-mode": "^1.1.0",
        "ts-essentials": "^9.2.0",
        "tsup": "^6.2.0",
        "typescript": "^4.7.4",
        "vite": "^3.0.5",
        "vitest": "^0.19.1"
    },
    "dependencies": {
        "clsx": "^1.2.1",
        "defu": "^6.0.0"
    }
}
