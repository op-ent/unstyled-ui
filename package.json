{
    "name": "@op-ent/unstyled-ui",
    "author": "Florian LEFEBVRE",
    "version": "0.1.6",
    "license": "MIT",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "engines": {
        "node": ">=14"
    },
    "size-limit": [
        {
            "path": "dist/index.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/index.mjs",
            "limit": "10 KB"
        }
    ],
    "pre-commit": [
        "lint",
        "test"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "dev": "tsup --watch \"src/**/*.{js,jsx,ts,tsx}\"",
        "build": "tsup",
        "test": "vitest run --coverage",
        "test:ui": "vitest --ui",
        "lint": "pnpm lint:check && pnpm prettier:check",
        "lint:check": "eslint . --ext js,jsx,ts,tsx --max-warnings=3 --config .eslintrc.json --no-eslintrc",
        "prettier:check": "prettier -c .",
        "prettier:write": "prettier -w .",
        "size": "size-limit",
        "storybook": "storybook dev -p 6006 --no-open",
        "storybook:build": "storybook build",
        "npm:publish": "pnpm build && np --no-cleanup"
    },
    "peerDependencies": {
        "react": ">=16"
    },
    "devDependencies": {
        "@op-ent/unstyled-ui-theme": "0.0.2-2",
        "@storybook/addon-docs": "^7.0.0-alpha.48",
        "@storybook/addon-essentials": "^7.0.0-alpha.48",
        "@storybook/addon-info": "^5.3.21",
        "@storybook/addon-links": "^7.0.0-alpha.48",
        "@storybook/addon-postcss": "^2.0.0",
        "@storybook/addons": "^7.0.0-alpha.48",
        "@storybook/react-vite": "^7.0.0-alpha.48",
        "@storybook/theming": "^7.0.0-alpha.48",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^13.4.0",
        "@types/react": "^18.0.15",
        "@types/react-dom": "^18.0.9",
        "@types/testing-library__jest-dom": "^5.14.5",
        "@typescript-eslint/eslint-plugin": "^5.44.0",
        "@typescript-eslint/parser": "^5.44.0",
        "@vitejs/plugin-react": "^2.2.0",
        "@vitest/coverage-c8": "^0.25.3",
        "@vitest/ui": "^0.25.3",
        "autoprefixer": "^10.4.13",
        "c8": "^7.12.0",
        "eslint": "^8.28.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.31.11",
        "eslint-plugin-react-hooks": "^4.6.0",
        "jsdom": "^20.0.3",
        "np": "^7.6.2",
        "postcss": "^8.4.19",
        "pre-commit": "^1.2.2",
        "prettier": "^2.8.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "size-limit": "^8.1.0",
        "storybook": "^7.0.0-alpha.48",
        "storybook-dark-mode": "^1.1.2",
        "tailwindcss": "^3.2.4",
        "tsup": "^6.5.0",
        "typescript": "^4.9.3",
        "vite": "^3.2.4",
        "vitest": "^0.25.3"
    },
    "dependencies": {
        "@zag-js/accordion": "^0.2.2",
        "@zag-js/react": "^0.3.0",
        "clsx": "^1.2.1",
        "defu": "^6.1.1",
        "ts-essentials": "^9.3.0"
    }
}
